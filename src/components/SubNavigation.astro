---
export interface Props {
  activeRoute: string;
}

const { activeRoute } = Astro.props;
---

<style lang="scss">
  ul {
    display: flex;
    align-items: center;
    gap: 18px;
    padding: 0;
  }

  li {
    position: relative;
    list-style: none;
  }

  a {
    display: flex;
    font-size: 1.125rem;
    font-family: "IBM Plex Mono", "IBM Plex Sans";
    font-weight: bold;
    opacity: 0.8;
  }

  .active {
    a {
      opacity: 1;
      color: var(--colour-highlight);
    }

    $indicator-size: 4px;

    &::before {
      content: "";
      position: absolute;
      top: -#{$indicator-size * 2};
      left: calc(50% - $indicator-size);
      width: 0;
      height: 0;
      border-left: $indicator-size solid transparent;
      border-right: $indicator-size solid transparent;
      border-top: $indicator-size solid var(--colour-highlight);
    }
  }
</style>

<ul>
  <li class:list={{ active: activeRoute === "/" }}>
    <a href="/">Blogposts</a>
  </li>
  <li class:list={{ active: activeRoute === "/projects" }}>
    <a href="/projects">Projects</a>
  </li>
</ul>
