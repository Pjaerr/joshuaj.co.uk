---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectList from "../components/ProjectList.svelte";
import BlogPostList from "../components/BlogPostList.svelte";

const blogposts = await getCollection("blog");

const projects = [
  {
    name: "Simple Food Journal (iOS)",
    description:
      "A simple food logging app. Created for myself, as a mindful alternative to the complicated calorie tracking apps. Made using React Native, built only for iOS to keep the design focused.",
    technologies: ["React Native", "TypeScript"],
    link: "https://apps.apple.com/gb/app/simple-food-journal/id6739615392",
  },
  {
    name: "Simple Mindmap",
    description:
      "A super simple online mind mapping tool. Created as all the other tools were either too clunky or required a signup. Made as a static site using Astro.",
    technologies: ["React", "TypeScript", "Tailwind"],
    link: "https://www.simplemindmap.com/",
  },
  {
    name: "Static Site Comments - Svelte Component",
    description:
      "A Svelte component that lets you use a github issue as a no-backend comments system for a static site/blog.",
    technologies: ["Svelte", "TypeScript"],
    link: "https://github.com/Pjaerr/svelte-github-issue-comments-component",
  },
  {
    name: "Isolation Run",
    description:
      "Use your phone's accelerometer to only play a video whilst you're running. Created during lockdown as a way to keep myself active.",
    technologies: ["Svelte", "Node.js", "Websockets"],
    link: "https://github.com/Pjaerr/Isolation-Run",
  },
  {
    name: "Pub Name Generator",
    description:
      "Generates random pub names using a local words list. Made with a focus on nice colour and typography combinations.",
    technologies: ["HTML", "JavaScript", "CSS"],
    link: "https://pjaerr.github.io/Pub-Name-Generator/",
  },

  {
    name: "Findr",
    description:
      "A tinder-like swiping application but for things to do nearby.",
    technologies: ["React", "Node.js", "Express"],
    link: "https://github.com/Pjaerr/Findr",
  },
];
---

<style lang="scss">
  @use "../styles/mixins";

  .introduction {
    @include mixins.centered;

    display: flex;
    flex-direction: column;
    margin-top: 48px;
    margin-bottom: 32px;

    /* Desktop */
    @media only screen and (min-width: 1048px) {
      flex-direction: row;
    }
  }

  .introduction__left {
    flex: 1;

    h1 {
      font-size: 3rem;
      line-height: 1;
      margin-bottom: 10px;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 400;
      margin-bottom: 24px;
      font-family: "IBM Plex Mono", monospace;
    }
  }

  .introduction__right {
    flex: 1;

    p,
    dl {
      font-size: 1.15rem;

      a {
        text-decoration: underline;
        text-decoration-style: dotted;
      }
    }

    .introducton__wave-emoji {
      font-size: 1.5rem;
    }
  }

  .introduction__links {
    display: flex;
    flex-direction: column;
    gap: 10px;
    list-style: none;
    padding: 0;

    a {
      text-decoration: underline;
      text-decoration-style: dotted;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
  }

  .container {
    @include mixins.centered;

    display: grid;
    grid-template-rows: auto auto;
    grid-gap: 32px;
  }

  .divider {
    width: 100%;
    opacity: 0.1;
    height: 1px;
    background-color: var(--colour-text-body);
  }
</style>

<BaseLayout
