---

<style lang="scss">
  @use "../styles/mixins";

  .container {
    @include mixins.centered;

    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
    flex-basis: 300px;
  }

  .page-description {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .book {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 14px;
    max-width: 300px;
  }

  .book__cover {
    max-width: 100%;
    height: 460px;
    border-radius: 6px;
    object-fit: cover;
  }

  .book__details {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;

    h2 {
      font-size: 1.25rem;
    }

    p {
      padding: 0;
    }
  }
</style>

<BaseLayout
  head={{
    title: "Books - joshuaj.co.uk",
    description: "Books that I've read and rate 5/5 stars.",
    image: "/assets/cover_image.png",
    permalink: "https://joshuaj.co.uk/projects",
  }}
>
  <div class="container">
    <!-- <SubNavigation activeRoute="/projects" /> -->

    <div class="page-description">
      <h1>Books</h1>
      <p>
        I've read a lot of books, but this list is the books that I would either
        read again, or have already read multiple times.
      </p>
    </div>

    {
      books.map((book) => (
        <div class="book">
          <img
            class="book__cover"
            src={book.cover}
            alt={`The cover of ${book.title}`}
          />
          <div class="book__details">
            <h2>{book.title}</h2>
            <p>{book.author}</p>
          </div>
        </div>
      ))
    }
  </div>
</BaseLayout>
